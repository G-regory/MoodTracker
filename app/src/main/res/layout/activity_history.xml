        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hier"
        app:layout_constraintEnd_toEndOf="@+id/activity_history_relative_layout_day_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_history_guidelineh2" />

    <ImageButton
        android:id="@+id/activity_history_btn_day_7"
        style="@style/PopupHistoryStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/activity_history_guidelineh7"
        app:layout_constraintEnd_toEndOf="@+id/activity_history_relative_layout_day_7"
        app:layout_constraintTop_toBottomOf="@+id/txt_day_7"
