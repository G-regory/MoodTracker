    <TextView
        android:id="@+id/txt_day_7"
        style="@style/TextHistoryStyle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="@string/une_semaine"
        app:layout_constraintEnd_toEndOf="@+id/activity_history_relative_layout_day_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_day_6"
        style="@style/TextHistoryStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/six_jour"
        app:layout_constraintEnd_toEndOf="@+id/activity_history_relative_layout_day_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_history_guidelineh7" />
