        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/activity_history_guidelineh1"
        app:layout_constraintEnd_toEndOf="@+id/activity_history_relative_layout_day_1"
        app:layout_constraintTop_toTopOf="@+id/activity_history_guidelineh2" />

